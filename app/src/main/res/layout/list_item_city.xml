<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <TextView
        android:id="@+id/example_city_name"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/example_city_country"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintDimensionRatio="h,1:1"
        tools:text="Cordry Sweetwater Lakes" />

    <TextView
        android:id="@+id/example_city_id"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/example_city_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/example_city_coords"
        tools:text="7728583" />

    <TextView
        android:id="@+id/example_city_country"
        android:layout_width="64dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="US" />

    <TextView
        android:id="@+id/example_city_coords"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/example_city_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="39.304642" />

    <TextView
        android:id="@+id/example_city_longitude"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/example_city_id"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/example_city_country"
        app:layout_constraintRight_toLeftOf="@+id/example_city_coords"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="-86.11837" />
</android.support.constraint.ConstraintLayout>
